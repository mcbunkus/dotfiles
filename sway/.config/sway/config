### Themes
include catppuccin-mocha

### Key bindings
include bindings

### Variables
# Your preferred terminal emulator
set $term "flatpak run org.wezfurlong.wezterm"

set $laptop eDP-1

set $font CaskaydiaCove Nerd Font 10

font $font

include /etc/sway/config-vars.d/*

gaps inner 4
gaps outer 4

# Output configuration
output {
	* bg $HOME/.config/sway/wallpapers/catppuccin/misc/Street.jpg stretch
	$laptop position 0,0
	HDMI-A-1 position 1920,0
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

# target                 title     bg    text   indicator  border
client.focused           $pink     $base $text  $rosewater $pink
client.focused_inactive  $mauve    $base $text  $rosewater $overlay0
client.unfocused         $mauve    $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

default_border pixel 3

# Application launcher
set $menu tofi-drun --drun-print-exec=true | xargs swaymsg exec --

# Status Bar:
bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*

