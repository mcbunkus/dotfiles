# Read `man 5 sway` for a complete reference.

### Key bindings
include bindings

### Variables
# Your preferred terminal emulator
set $term alacritty

set $laptop eDP-1

set $font JetBrainsMono Nerd Font 10

font $font

set $bg #1a1a24
set $fg #a7b7d6
set $br #ebb9b9

include /etc/sway/config-vars.d/*

gaps inner 4
gaps outer 4

# Output configuration
output {
	* bg $HOME/.config/sway/wallpapers/escape.png stretch
	$laptop position 0,0
	HDMI-A-1 position 1920,0
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

# Color stuff
# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $bg     $bg       $br
client.focused_inactive $bg     $bg     $fg     $bg       $bg
client.unfocused        $bg     $bg     $fg     $bg       $bg
#client.urgent          $br     $br     $fg     $bg       $br #currently not implemented
#client.placeholder     $br     $br     $fg     $bg       $br #currently not implemented
client.background $bg

default_border pixel 3

# Application launcher
set $menu tofi-drun --drun-print-exec=true | xargs swaymsg exec --

# Status Bar:
bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*

